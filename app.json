{
  "expo": {
    "name": "EncontradOS",
    "slug": "EncontradOS",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icono.png",
      "resizeMode": "contain",
      "backgroundColor": "#3d352d"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.tuquipo.encontrados",
      "infoPlist": {
        "UIBackgroundModes": [
          "location",
          "fetch",
          "remote-notification"
        ],
        "NSPhotoLibraryUsageDescription": "Esta aplicación necesita acceder a tus fotos para reportar mascotas perdidas."
      }
    },
    "android": {
      "package": "com.tuquipo.encontrados",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "La aplicación necesita acceder a tus fotos para reportar mascotas perdidas."
        }
      ],
      "expo-location"
    ],
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}